 <mvc:View controllerName="com.myorg.myEasyUI5App.controller.MainView"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:plugins="sap.m.plugins"
  xmlns:mvc="sap.ui.core.mvc">
  <App id="idAppControl" >
    <pages>
      <Page>
        <content>
          <Table id="myTable"
            sticky="ColumnHeaders,HeaderToolbar"
            autoPopinMode="true"
            hiddenInPopin="Low"
            popinChanged=".onPopinChanged"
            items="{
              path: '/'
            }">
            <dependents>
              <plugins:ColumnResizer />
            </dependents>
            <headerToolbar>
              <OverflowToolbar>
                <Title text="Sales report" />
                <ToolbarSpacer />
                <Button id="togglePopin" text="Show popins" press=".onTogglePopin"/>
              </OverflowToolbar>
            </headerToolbar>
            <columns>
              <Column importance="High">
                <Label text="Product Name" />
              </Column>
              <Column importance="Low">
                <Label text="Product Code" />
              </Column>
              <Column>
                <Label text="Produced" />
              </Column>
              <Column>
                <Label text="Sold" />
              </Column>
              <Column importance="High">
                <Label text="Sold Percentage" />
              </Column>
            </columns>
            <items>
              <ColumnListItem>
                <Text text="{ProductCode}" />
                <Text text="{ProductName}" />
                <ObjectNumber number="{Produced}" unit="{Unit}" />
                <ObjectNumber number="{Sold}" unit="{Unit}" />
                <ObjectNumber number="{SoldPercent}"
                  unit="{SoldPercentUnit}"
                  state="{
                    path: 'SoldPercent',
                    formatter: '.formatter.soldPercentState'
                  }" />
              </ColumnListItem>
            </items>
          </Table>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>